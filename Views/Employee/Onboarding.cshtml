@{
    ViewBag.Title = "Employee Onboarding";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Onboarding</title>
    <link rel="stylesheet" href="~/css/onboarding.css">
</head>
<body>
    <div class="container">
        <!-- Onboarding Section -->
        <div class="section">
            <h2>Onboarding</h2>
            <div class="controls">
                <button class="btn">New Hire Checklist</button>
                <button class="btn">Task Assignment</button>
            </div>
            <div class="employee-info">
                <p><strong>Employee:</strong> John Jane</p>
                <p><strong>Status:</strong> In Progress</p>
                <p><strong>Task 1:</strong> Submit Documents (Complete)</p>
                <p><strong>Task 2:</strong> Orientation Meeting (Pending)</p>
            </div>
            <div class="task-controls">
                <button class="btn">Add Task</button>
                <button class="btn">Mark as Completed</button>
            </div>
        </div>

        <!-- New Hire Checklist Section -->
        <div class="section">
            <h3>New Hire Checklist for: <a href="#">John Doe</a></h3>
            <ul class="checklist">
                <li><input type="checkbox"> Submit Personal Documents</li>
                <li><input type="checkbox"> Sign Employment Contract</li>
                <li><input type="checkbox"> Review Company Policies</li>
                <li><input type="checkbox"> Setup Workstation and Equipment</li>
                <li><input type="checkbox"> Attend Orientation Meeting</li>
                <li><input type="checkbox"> Complete Training Sessions</li>
            </ul>
            <div class="task-controls">
                <button class="btn">Add Task</button>
                <button class="btn">Mark as Completed</button>
            </div>
        </div>

        <!-- Task Assignment Section -->
        <div class="section">
            <h3>Task Assignment for: <a href="#">John Doe</a></h3>
            <p><strong>Assigned By:</strong> HR Admin</p>
            <p><strong>Status:</strong> In Progress</p>
            <div class="task">
                <p><strong>Task 1:</strong> Submit Tax Documents</p>
                <ul>
                    <li><strong>Due Date:</strong> --/--/----</li>
                    <li><strong>Status:</strong> Completed</li>
                </ul>
                <div class="actions">
                    <button class="btn">View</button>
                    <button class="btn">Edit</button>
                </div>
            </div>
            <div class="task">
                <p><strong>Task 2:</strong> Complete Profile Information</p>
                <ul>
                    <li><strong>Due Date:</strong> --/--/----</li>
                    <li><strong>Status:</strong> Completed</li>
                </ul>
                <div class="actions">
                    <button class="btn">View</button>
                    <button class="btn">Edit</button>
                </div>
            </div>
            <div class="task-controls">
                <button class="btn">Add New Task</button>
            </div>
        </div>
    </div>
</body>
</html>
