<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Main Dashboard</title>
    <link rel="stylesheet" href="~/css/main-dashboard.css">
    <!-- Include Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="header">
        <div class="logo-container">
            <div class="hr-logo"></div>
        </div>
        <h2 class="welcome-text">Welcome Jane Doe</h2>
        <h2 class="heading">SparkLine</h2>
    </div>

    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <div class="dashboard">
            <a class="dashboard-button employee" asp-controller="Employee" asp-action="Management">
                <i class="fas fa-users"></i>
                <span>Employee Management</span>
            </a>
            <a class="dashboard-button attendance" asp-controller="Attendance" asp-action="Index">
                <i class="fas fa-user-check"></i>
                <span>Attendance</span>
            </a>
            <a class="dashboard-button payroll" asp-controller="Employee" asp-action="PayrollInfo">
                <i class="fas fa-dollar-sign"></i>
                <span>Payroll</span>
            </a>
            <a class="dashboard-button onboarding" asp-controller="Employee" asp-action="Details">
                <i class="fas fa-user-plus"></i>
                <span>Onboarding</span>
            </a>
            <a class="dashboard-button performance" asp-controller="PerformanceReviews" asp-action="CreateReview">
                <i class="fas fa-chart-line"></i>
                <span>Performance</span>
            </a>
            <a class="dashboard-button logout" onclick="confirmLogout()">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <script>
        function confirmLogout() {
            if (confirm("Are you sure you want to log out?")) {
                window.location.href = '@Url.Action("Logout", "Account")';
            }
        }
    </script>
</body>
</html>